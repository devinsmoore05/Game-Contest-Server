<% if @player.errors.any? %>
  <div class='alert alert-danger'>
		<p> There are <% @player.errors.count %> errors. </p>
  </div>
		<ul>
			<% @player.errors.full_messages.each do |message| %>
				<li><%= message %> </li>
			<% end %>	
		</ul>
<% end %>

